<Project Sdk="Microsoft.NET.Sdk">

	<PropertyGroup>
		<TargetFramework>NET7.0</TargetFramework>
		<IsPackable>TRUE</IsPackable>
		<GeneratePackageOnBuild>TRUE</GeneratePackageOnBuild>
		<ImplicitUsings>ENABLE</ImplicitUsings>
		<Nullable>ENABLE</Nullable>
	</PropertyGroup>

	<PropertyGroup>
		<PackageID>DRAMA</PackageID>
		<Version>0.3.20</Version>
		<Title>DRAMA</Title>
		<Authors>Vlad-Alexandru Tănăsescu</Authors>
		<Company>StackWorks™</Company>
		<Product>DRAMA</Product>
		<Description>Full Stack Test Automation Framework</Description>
		<Copyright>Copyright © 2018-2023 StackWorks™ All Rights Reserved</Copyright>
		<PackageProjectURL>https://www.nuget.org/packages/DRAMA/</PackageProjectURL>
		<PackageIcon>ICON.PNG</PackageIcon>
		<PackageReadmeFile>README.MD</PackageReadmeFile>
		<RepositoryURL>https://github.com/STACKW0RKS/DRAMA</RepositoryURL>
		<RepositoryType>GIT</RepositoryType>
		<PackageTags>DRAMA;FrontEnd;Playwright;API;BackEnd;FullStack;Test;Automation;Framework;C#;.NET</PackageTags>
		<PackageReleaseNotes>Death Is Just One Character I Play, My Real Name Is Change</PackageReleaseNotes>
		<NeutralLanguage>en-GB</NeutralLanguage>
		<AssemblyVersion>0.3.20.0</AssemblyVersion>
		<FileVersion>0.3.20.0</FileVersion>
		<PackageLicenseFile>LICENSE</PackageLicenseFile>
		<PackageRequireLicenseAcceptance>TRUE</PackageRequireLicenseAcceptance>
	</PropertyGroup>

	<ItemGroup>
		<Content PackagePath="" Visible="FALSE" Include="..\ICON.PNG" />
		<Content PackagePath="" Visible="FALSE" Include="..\README.MD" />
		<Content PackagePath="" Visible="FALSE" Include="..\LICENSE" />
	</ItemGroup>

	<ItemGroup>
		<Content PackagePath="build" Include="Targets\DRAMA.TARGETS" />
		<Content PackagePath="build" Include="Resources\DRAMA.JSON.SCHEMA" />
	</ItemGroup>

	<ItemGroup>
		<ContentWithTargetPath Include="Resources\DRAMA.JSON.SCHEMA">
			<CopyToOutputDirectory>Always</CopyToOutputDirectory>
			<TargetPath>DRAMA.JSON.SCHEMA</TargetPath>
		</ContentWithTargetPath>
	</ItemGroup>

	<ItemGroup>
		<!-- TODO: Remove ExtentReports After Migrating Away From Extent Reports -->
		<PackageReference Include="ExtentReports" Version="4.1.0" />
		<PackageReference Include="Microsoft.Data.Sqlite" Version="7.0.5" />
		<PackageReference Include="Microsoft.Playwright" Version="1.32.0" />
		<PackageReference Include="MySql.Data" Version="8.0.33" />
		<PackageReference Include="Newtonsoft.Json.Schema" Version="3.0.14" />
		<PackageReference Include="Npgsql" Version="7.0.4" />
		<PackageReference Include="NUnit" Version="3.13.3" />
		<PackageReference Include="Oracle.ManagedDataAccess.Core" Version="3.21.100" />
		<PackageReference Include="SpecFlow" Version="3.9.74" />
		<PackageReference Include="System.Data.SqlClient" Version="4.8.5" />
	</ItemGroup>

</Project>
