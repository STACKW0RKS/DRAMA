<Project Sdk="Microsoft.NET.Sdk">

	<PropertyGroup>
		<TargetFramework>NET6.0</TargetFramework>
		<IsPackable>TRUE</IsPackable>
		<GeneratePackageOnBuild>TRUE</GeneratePackageOnBuild>
		<ImplicitUsings>ENABLE</ImplicitUsings>
		<Nullable>ENABLE</Nullable>
	</PropertyGroup>

	<PropertyGroup>
		<PackageID>DRAMA</PackageID>
		<Version>0.3.8</Version>
		<Title>DRAMA</Title>
		<Authors>Vlad-Alexandru Tănăsescu</Authors>
		<Company>StackWorks™</Company>
		<Product>DRAMA</Product>
		<Description>6th Generation Enterprise-Grade .NET-Based Test Automation Framework</Description>
		<Copyright>Copyright © 2018-2022 StackWorks™ All Rights Reserved</Copyright>
		<PackageProjectURL>https://www.nuget.org/packages/DRAMA/</PackageProjectURL>
		<PackageIcon>ICON.PNG</PackageIcon>
		<PackageReadmeFile>README.MD</PackageReadmeFile>
		<RepositoryURL>https://github.com/S-T-A-C-K-W-O-R-K-S/DRAMA-Test-Automation-Framework</RepositoryURL>
		<RepositoryType>GIT</RepositoryType>
		<PackageTags>DRAMA;Playwright;Test;Automation;Framework</PackageTags>
		<PackageReleaseNotes>Death Is Just One Character I Play, My Real Name Is Change</PackageReleaseNotes>
		<NeutralLanguage>en-GB</NeutralLanguage>
		<AssemblyVersion>0.3.8.0</AssemblyVersion>
		<FileVersion>0.3.8.0</FileVersion>
		<PackageLicenseFile>LICENSE</PackageLicenseFile>
		<PackageRequireLicenseAcceptance>TRUE</PackageRequireLicenseAcceptance>
	</PropertyGroup>

	<ItemGroup>
		<Content Include="..\ICON.PNG" Visible="FALSE">
			<Pack>TRUE</Pack>
			<PackagePath>\</PackagePath>
		</Content>
		<Content Include="..\README.MD" Visible="FALSE">
			<Pack>TRUE</Pack>
			<PackagePath>\</PackagePath>
		</Content>
		<Content Include="..\LICENSE" Visible="FALSE">
			<Pack>TRUE</Pack>
			<PackagePath>\</PackagePath>
		</Content>
	</ItemGroup>

	<ItemGroup>
		<ContentWithTargetPath Include="Resources\DRAMA.JSON.SCHEMA">
			<CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
			<TargetPath>DRAMA.JSON.SCHEMA</TargetPath>
			<PackageCopyToOutput>TRUE</PackageCopyToOutput>
		</ContentWithTargetPath>
	</ItemGroup>

	<ItemGroup>
		<!-- TODO: Remove ExtentReports After Migrating Away From Extent Reports -->
		<PackageReference Include="ExtentReports" Version="4.1.0" />
		<PackageReference Include="Microsoft.Data.Sqlite.Core" Version="6.0.2" />
		<PackageReference Include="Microsoft.Playwright" Version="1.19.1" />
		<PackageReference Include="Newtonsoft.Json.Schema" Version="3.0.14" />
		<PackageReference Include="Oracle.ManagedDataAccess.Core" Version="3.21.50" />
		<PackageReference Include="SpecFlow" Version="3.9.52" />
		<PackageReference Include="System.Data.SqlClient" Version="4.8.3" />
	</ItemGroup>

</Project>
