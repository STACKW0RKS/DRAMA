<Project Sdk="Microsoft.NET.SDK">

	<PropertyGroup>
		<TargetFramework>NET6.0</TargetFramework>
		<IsPackable>TRUE</IsPackable>
		<GeneratePackageOnBuild>TRUE</GeneratePackageOnBuild>
		<ImplicitUsings>ENABLE</ImplicitUsings>
		<Nullable>ENABLE</Nullable>
	</PropertyGroup>

	<PropertyGroup>
		<PackageID>DRAMA</PackageID>
		<Version>0.2.6</Version>
		<Title>DRAMA</Title>
		<Authors>Vlad-Alexandru Tănăsescu</Authors>
		<Company>StackWorks™</Company>
		<Product>DRAMA</Product>
		<Description>6th Generation Enterprise-Grade .NET-Based Test Automation Framework</Description>
		<Copyright>Copyright © 2018-2022 StackWorks™ All Rights Reserved</Copyright>
		<PackageProjectURL>https://www.nuget.org/packages/DRAMA/</PackageProjectURL>
		<PackageIcon>ICON.PNG</PackageIcon>
		<PackageReadmeFile>README.MD</PackageReadmeFile>
		<RepositoryURL>https://github.com/S-T-A-C-K-W-O-R-K-S/DRAMA-Test-Automation-Framework</RepositoryURL>
		<RepositoryType>GIT</RepositoryType>
		<PackageTags>DRAMA;Playwright;Test;Automation;Framework</PackageTags>
		<PackageReleaseNotes>Death Is Just One Character I Play, My Real Name Is Change</PackageReleaseNotes>
		<NeutralLanguage>en-GB</NeutralLanguage>
		<AssemblyVersion>0.2.6.0</AssemblyVersion>
		<FileVersion>0.2.6.0</FileVersion>
		<PackageLicenseFile>LICENSE</PackageLicenseFile>
		<PackageRequireLicenseAcceptance>TRUE</PackageRequireLicenseAcceptance>
	</PropertyGroup>

	<ItemGroup>
		<None Include="..\ICON.PNG" Visible="FALSE">
			<Pack>TRUE</Pack>
			<PackagePath>\</PackagePath>
		</None>
		<None Include="..\README.MD" Visible="FALSE">
			<Pack>TRUE</Pack>
			<PackagePath>\</PackagePath>
		</None>
		<None Include="..\LICENSE" Visible="FALSE">
			<Pack>TRUE</Pack>
			<PackagePath>\</PackagePath>
		</None>
	</ItemGroup>

	<ItemGroup>
		<PackageReference Include="ExtentReports" Version="4.1.0" /> <!-- TODO: Remove This After Migrating Away From Extent Reports -->
		<PackageReference Include="Microsoft.Playwright" Version="1.18.1" />
		<PackageReference Include="SpecFlow" Version="3.9.52" />
	</ItemGroup>

</Project>
